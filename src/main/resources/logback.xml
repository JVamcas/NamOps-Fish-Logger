<configuration>
    <!-- Store logs in the application's working directory (user.dir). -->
    <property name="LOG_DIR" value="${user.dir}"/>

    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/seanam-bins-fe.log</file>
        <append>true</append>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- fileNamePattern uses an index for size-based rollover within each day and compresses old files -->
            <fileNamePattern>${LOG_DIR}/app.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>

            <!-- Use SizeAndTimeBasedFNATP to roll based on time and size -->
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- roll files when they exceed 10MB within the time period -->
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>

            <!-- keep 14 days of history -->
            <maxHistory>14</maxHistory>
            <!-- optional total size cap -->
            <!-- <totalSizeCap>1GB</totalSizeCap> -->
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="ROLLING_FILE" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
